//- index.jade
extends ./index.jade


block title
	title Suppliers

block style
	style.
		.space { padding: 10; }
		.label { text-align: left; }

block content_title
	p Suppliers

block content
	div(ng-controller="SupplierController")
		.col-sm-6.space
			//- 1st line
			.col-sm-6.space Zone Type:
			.col-sm-6.space
				select(name='zone_type').form-control
					option(value='Status1') Type 1
					option(value='Status2') Type 2
					option(value='Status3') Type 3
					option(value='Status4') Type 4

			//- 2nd line
			.col-sm-6.space Zone Code:
			.col-md-6.space
				input#disabledInput.form-control(name='zone_code' type='text', placeholder='Zone Code' disabled='')

			//- 3rd line
			.col-sm-6.space Zone name:
			.col-md-6.space
				input.form-control(name='zone_name' type='text', placeholder='')

			//- 4th line
			.col-sm-6.space Zone Desc:
			.col-md-6.space
				textarea.form-control(rows='4' name='zone_desc')

			//- 5th line
			.col-sm-6.space
			.col-sm-3.space
				button.btn.btn-primary.btn-lg.btn-block(type='button', name='save') Save
			.col-sm-3.space
				button.btn.btn-default.btn-lg.btn-block(type='button', name='cancel') Cancel
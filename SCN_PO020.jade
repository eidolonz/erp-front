//- index.jade
extends ./index.jade

block title
	title Create purchase order

block style
	style.
		.space { padding: 10; }
		.label { text-align: left; }

block content_title
	p Create purchase order

block content
	.row
		.col-sm-3.space Supplier Code:*
		.col-sm-3.space
			input(name='supplier_code').form-control
		.col-sm-6.space
	.row
		.col-sm-3.space Supplier Name:*
		.col-sm-3.space
			input(name='supplier_name').form-control
		.col-sm-6.space
	.row
		.col-sm-3.space Order Date:*
		.col-sm-3.space
			input.form-control(type='date', placeholder='Date Picker')

	.row		
		.col-sm-11.space
			table.product-table.table.table-striped(style="padding: 50;")
				tr
					th No.
					th Product Name
					th Cost
					th Qty
					th Total
					th Action
				tr
					td 1
					td product 2
					td 100.00
					td 4
					td 400.00
					td [Edit] [Delete]
				tr
					td 2
					td product 5
					td 123.00
					td 3
					td 369.00
					td [Edit] [Delete]
		.col-sm-1.space

	.row
		.col-md-10.space
		.col-md-1.space
			a(href="#SCN_PO021" data-toggle='modal', data-target='#myModal')
				img(src="images/addBtn.png", alt="add new PO")		
			// Modal
			#myModal.modal.fade(role='dialog')
				.modal-dialog
					// Modal content
					.modal-content
						.modal-header
							button.close(type='button', data-dismiss='modal') x
							h4.modal-title Please add product
						.modal-body
							.row
								.col-md-3.space Product code :*
								.col-md-9.space
									input(name='product_code').form-control
							.row
								.col-md-3.space Product name :*
								.col-md-9.space
									input(name='product_name').form-control
							.row
								.col-md-3.space Qty :*
								.col-md-9.space
									input(name='qty').form-control
							.row
								.col-md-3.space Cost :
								.col-md-9.space
									input(name='product_code', readonly='true', value='0.00').form-control
						.modal-footer
							button.btn.btn-primary(type="submit", data-dismiss='modal') Confirm
							button.btn.btn-default(type='button', data-dismiss='modal') Close
      
		.col-md-1.space


	.row
		.col-md-5.space
		.col-md-2.space Total: 
		.col-md-4.space
			input(name='total').form-control
		.col-md-1.space


	.row		
		.col-sm-7.space
		.col-sm-2.space
			button.btn.btn-primary.btn-lg.btn-block(type='button',name='save') Save
		.col-sm-2.space
			button.btn.btn-default.btn-lg.btn-block(type='button',name='cancel') Cancel
		.col-sm-1.space
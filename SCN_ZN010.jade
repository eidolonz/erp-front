//- index.jade
extends ./index.jade

block title
	title Current Inventory

block style
	style.
		.space { padding: 10; }
		.label { text-align: left; }

block content_title
	p Current Inventorys

block content
	.row
		.col-sm-2.space Zone Type:
		.col-md-3.space
			select(name='product_status', value='Find by supplier name').form-control
				option(value='Status1') Zone 1
				option(value='Status2') Zone 2

				option(value='Status3') Zone 3
				option(value='Status4') Zone 4
		.col-sm-3.space Zone Name:
		.col-sm-3.space
			input.form-control(type='text', placeholder='Find by PO number')
		
		
		.col-sm-1.space
		.col-sm-7.space
		.col-sm-2.space
			button.btn.btn-primary.btn-lg.btn-block(type='button', name='search') Search
		.col-sm-2.space
			button.btn.btn-default.btn-lg.btn-block(type='button', name='clear') Clear
		.col-sm-1.space
		.col-sm-11.space
			table.product-table.table.table-striped(style="padding: 50;")
				tr
					th Zone Type
					th Zone Code
					th Zone Name
					th Zone Desc
					th Action
				tr
					td Normal
					td Zone Code 1
					td Zone Name 1
					td Zone Desc 1
					td 
						a(href="#") [Edit]
				tr
					td High
					td Zone Code 2
					td Zone Name 2
					td Zone Desc 2
					td 
						a(href="#") [Edit]
		.col-sm-1.space
	.row		
		.col-sm-7.space
		.col-sm-4.space
			a(href="SCN_ZN020.html")
				button.btn.btn-primary.btn-lg.btn-block(type='button',name='supply') Create New Zone
		.col-sm-1.space
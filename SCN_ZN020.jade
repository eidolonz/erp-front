//- index.jade
extends ./index.jade

block title 
	title Create Zone

block style
	style.
		.space { padding: 10; }
		.label { text-align: left; }

block content_title
	p Create Zone

block content
	div(ng-controller='ZoneController')
		.col-sm-6.space
			.col-md-3.space
			.col-md-3.space Zone Type:
			.col-md-6.space
				select(ng-init="createZone.zone_type = createZone.zone_type || options[0].value", ng-model='createZone.zone_type', ng-options="option.value as option.name for option in options").form-control
			
			.col-md-3.space
			.col-md-3.space Zone Code:
			.col-md-6.space
				input.form-control(ng-init="createZone.zone_id = null" ng-model='createZone.zone_id' type='text' placeholder='Zone Code')

			.col-sm-3.space
			.col-sm-3.space Zone Name:
			.col-md-6.space
				input.form-control(ng-init="createZone.zone_name = null" ng-model='createZone.zone_name' type='text' placeholder='Zone Name')

			.col-sm-3.space
			.col-sm-3.space Zone Desc:
			.col-md-6.space
				textarea.form-control(ng-model='createZone.zone_desc' rows="3" placeholder='Zone Desc')

			//- 5th line
			.col-sm-6.space
			.col-sm-3.space
				button.btn.btn-primary.btn-lg.btn-block(href='SCN_ZN010.html' type='button', ng-click='createZone($event)') Create
			.col-sm-3.space
				button.btn.btn-default.btn-lg.btn-block(type='button' ng-click="goToMainPage()") Cancel


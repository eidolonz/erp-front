html
	head
		link(rel="stylesheet", href="css/bootstrap.min.css")
		link(rel="stylesheet", href="css/bootstrap-theme.min.css")
		link(rel='stylesheet', href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css")
		link(rel="stylesheet" , href="css/datepicker.css")
		link(rel="stylesheet" , href="css/style.css")


		script(data-require='angular.js@1.4.8', data-semver='1.4.8', src='http://code.angularjs.org/1.4.8/angular.min.js')
		script(data-require='angular-ui-bootstrap@0.3.0', data-semver='0.3.0', src='http://angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.3.0.min.js')
		script(src='js/jquery-1.11.3.min.js')
		script(src='js/bootstrap-datepicker.js')
		script(src='js/bootstrap.min.js')
		script(src="bower_components/angular/angular.min.js")
		script(src="js/app.js")
	body(ng-app='myApp')
		div(ng-controller='SearchSupplier')
			.col-md-2.space
			.col-md-8.space
				div(style="border:#000 solid 1px; padding:20px; margin-top:20px" id='report')
					div(style='margin-top:50px')
						.row
							.col-md-6.space 
								h4 
									b DSD TECHNOLOGY COOPERATE
							.col-md-3.space
							.col-md-3.space 
								h4 
									b PURCHASE ORDER
						.row
							.col-md-5.space
								p 111/111 Bang Mod Road
							.col-md-3.space
							.col-md-2.space
					div(style='margin-top:20px')
						.row
							.col-md-2.space
								b PO Number: 
							.col-md-2.space {{currentPoNumber}}
						.row
							.col-md-2.space
								b PO DATE: 
							.col-md-2.space {{poheader.order_date}}
						.row(style='margin-top:20px')
							.col-md-5.space
								p
									b TO:
							.col-md-1.space
							.col-md-5.space
								p
									b SHIP TO:
						.row
							.col-md-5.space {{poheader.sp_id.name}}
							.col-md-1.space
							.col-md-5.space DSD TECHNOLOGY COOPERATE
						.row
							.col-md-5.space {{poheader.sp_id.address}}
							.col-md-1.space
							.col-md-5.space 111/111 Bang Mod Road
					div(style='margin-top:50px; margin-bottom:50px')
						.row
							.col-sm-12.space.table-responsive
								table.product-table.table.table-striped.text-center.table-bordered.table-hover
									thead
										tr
											th.text-center
												b Units
											th.text-center
												b Description
											th.text-center
												b Unit Price
											th.text-center
												b Total
												
									tbody
										tr(ng-repeat='item in poItem')
											td {{item.quantity}}
											td {{item.pd_id.pd_name}}
											td {{item.price}}
											td {{item.quantity * item.price}}					
						.row
							.col-sm-8.space
							.col-sm-2.space
								p
									b Sub Total
							.col-sm-2.space {{poheader.untaxed_total}}
						.row
							.col-sm-8.space
							.col-sm-2.space
								p
									b Sales Tax
							.col-sm-2.space {{poheader.untaxed_total * 0.07}}
						.row
							.col-sm-8.space
							.col-sm-2.space
								p 
									b Total
							.col-sm-2.space {{poheader.total}}
				
				div.text-center(style='margin:30px')
					.row
						.col-sm-4.space
						.col-sm-2.space
							button.btn.btn-primary.btn-lg.btn-block(type="submit" value='submit' ng-click="printDiv()") Print
						.col-sm-2.space
							a(href="SCN_PO010.html")
								button.btn.btn-default.btn-lg.btn-block(type='button' name='cancle') Close
			.col-sm-2.space

//- index.jade
extends ./index.jade


block title
	title Suppliers

block style
	style.
		.space { padding: 10; }
		.label { text-align: left; }

block content_title
	p Suppliers

block content
	div(ng-controller="MainController")
		.row
			.col-sm-3.space Supplier code:
			.col-sm-3.space
				input.form-control(type='text', placeholder='code')
			.col-sm-2.space Supplier Name:
			.col-sm-3.space
				input.form-control(type='text', placeholder='')
			.col-sm-1.space
			.col-sm-3.space Supplier Status:
			.col-md-3.space
				select(name='product_status', value='Find by Product Status', placeholder='Product Status').form-control
					option(value='Status1') Status 1
					option(value='Status2') Status 2
					option(value='Status3') Status 3
					option(value='Status4') Status 4
			.col-sm-1.space
			.col-sm-7.space
			.col-sm-2.space
				button.btn.btn-primary.btn-lg.btn-block(type='button', name='search') Search
			.col-sm-2.space
				button.btn.btn-default.btn-lg.btn-block(type='button', name='clear') Clear
			.col-sm-1.space
			.col-sm-11.space

				//Product template
				a(href="SCN_SP030.html").col-sm-3.space(style="height:120px; border: 1px solid #C5C5C5; border-radius: 5px 5px;margin:10px;width:30%" 
				ng-repeat="pointer in productList")
					.col-sm-6.space(style="margin:-10px")
						img.productPic(src="",alt="Smiley face", height="42", width="42")
					.col-sm-6.space(style="height:100%; margin-top:-20px")
						.row
							.col-sm-12.space
								//- from angular
								div Code : {{111}}
						.row
							.col-sm-12.space
								//- from angular
								div Name : Supplier
						.row
							.col-sm-12.space
								//- from angular
								div Status : Active

				
			.col-sm-1.space
		.row		
			.col-sm-7.space
			.col-sm-4.space
				a(href="SCN_SP020.html")
					button.btn.btn-primary.btn-lg.btn-block(type='button',name='supply') Create New Supplier
			.col-sm-1.space